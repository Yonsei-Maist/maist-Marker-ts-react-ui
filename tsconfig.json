{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "allowJs": false,
        "jsx": "react",
        "declaration": true,        
        "declarationMap": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/api/**/*",
        "./src/components/**/*",
        "./src/hooks/**/*",
        "./src/models/**/*",
        "./src/index.tsx"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.stories.tsx"
    ]
}